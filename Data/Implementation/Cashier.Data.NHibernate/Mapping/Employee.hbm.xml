<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Cashier.Entity.Employee, Cashier.Entity" table="Employee" lazy="false">
    <id name="Id" column="Id" unsaved-value="0">
      <generator class="sequence">
        <param name="sequence">SQ_GLOBAL</param>
      </generator>
    </id>
    
    <property name="FM" length="200" not-null="true"/>
    <property name="IM" length="200" not-null="true"/>
    <property name="OT" length="200" not-null="true"/>

    <property name="Phone" length="200" not-null="true"/>
    <property name="Cabinet" length="200" not-null="true"/>
    <property name="Subscribe" type="Boolean" not-null="true"/>

    <many-to-one  foreign-key="Employee_Post_FK" name="Post" fetch="join" column="PostId" class="Cashier.Entity.Post, Cashier.Entity" not-null="true"/>
    <many-to-one  foreign-key="Employee_Organization_FK" name="Organization" fetch="join" column="OrganizationId" class="Cashier.Entity.Organization, Cashier.Entity" not-null="true"/>

    <one-to-one foreign-key="Employee_CabinetUser_FK" name="User" class="Cashier.Entity.CabinetUser, Cashier.Entity"/>
  </class>
</hibernate-mapping>