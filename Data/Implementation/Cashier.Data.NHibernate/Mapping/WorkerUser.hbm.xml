<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Cashier.Entity.WorkerUser, Cashier.Entity" table="WorkerUser" lazy="false">
    <id name="Id" column="Id" unsaved-value="0">
      <generator class="sequence">
        <param name="sequence">SQ_GLOBAL</param>
      </generator>
    </id>

    <property name="Name"     length="200"  not-null="true"/>
    <property name="Email"    length="200"  unique="true" index="User_Email_idx" not-null="true"/>
    <property name="Password" length="100" not-null="true"/>
    
    <many-to-one foreign-key="WorkerUser_Worker_FK" name="Worker" fetch="join" column="WorkerId" class="Cashier.Entity.Worker, Cashier.Entity"/>
    <many-to-one  not-null="true" foreign-key="WorkerUser_TypeWorkerUser_FK" name="UserType" fetch="join" column="TypeWorkerUserId" class="Cashier.Entity.TypeWorkerUser, Cashier.Entity"/>
  </class>
</hibernate-mapping>