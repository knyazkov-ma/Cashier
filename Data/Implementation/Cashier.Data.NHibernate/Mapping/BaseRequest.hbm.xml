<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
  <class name="Cashier.Entity.BaseRequest, Cashier.Entity" lazy="false">
    <id name="Id" column="Id" unsaved-value="0">
      <generator class="sequence">
        <param name="sequence">SQ_REQUEST</param>
      </generator>
    </id>
    <version name="Version" column="Version" type="Int32" />
        
    <property name="DateInsert"       type="DateTime" not-null="true"/>
    <property name="DateUpdate"       type="DateTime" not-null="true"/>
    <property name="DateEndPlan"      type="DateTime" not-null="true"/>
    <property name="DateEndFact"      type="DateTime" />
    <property name="DescriptionProblem" length="2000" not-null="true"/>
    <property name="CountCorrectionDateEndPlan" type="Int32" not-null="true"/>

    <union-subclass name="Cashier.Entity.Request, Cashier.Entity" table="Request">
      <many-to-one  foreign-key="Request_Status_FK"   name="Status"   fetch="join" column="StatusId"  class="Cashier.Entity.StatusRequest, Cashier.Entity" not-null="true"/>
      <many-to-one  foreign-key="Request_Object_FK"   name="Object"   fetch="join" column="ObjectId" class="Cashier.Entity.RequestObject, Cashier.Entity" not-null="true"/>
      <many-to-one  foreign-key="Request_Employee_FK" name="Employee" fetch="join" column="EmployeeId" class="Cashier.Entity.Employee, Cashier.Entity" not-null="true"/>
      <many-to-one  foreign-key="Request_Worker_FK"   name="Worker"   fetch="join" column="WorkerId" class="Cashier.Entity.Worker, Cashier.Entity" not-null="true"/>
      <many-to-one  foreign-key="Request_User_FK"     name="User"     fetch="join" column="UserId" class="Cashier.Entity.WorkerUser, Cashier.Entity"/>
    </union-subclass>

    <union-subclass name="Cashier.Entity.RequestArch, Cashier.Entity" table="RequestArch">
      <many-to-one  foreign-key="RequestArch_Status_FK"   name="Status"   fetch="join" column="StatusId"  class="Cashier.Entity.StatusRequest, Cashier.Entity" not-null="true"/>
      <many-to-one  foreign-key="RequestArch_Object_FK"   name="Object"   fetch="join" column="ObjectId" class="Cashier.Entity.RequestObject, Cashier.Entity" not-null="true"/>
      <many-to-one  foreign-key="RequestArch_Employee_FK" name="Employee" fetch="join" column="EmployeeId" class="Cashier.Entity.Employee, Cashier.Entity" not-null="true"/>
      <many-to-one  foreign-key="RequestArch_Worker_FK"   name="Worker"   fetch="join" column="WorkerId" class="Cashier.Entity.Worker, Cashier.Entity" not-null="true"/>
      <many-to-one  foreign-key="RequestArch_User_FK"     name="User"     fetch="join" column="UserId" class="Cashier.Entity.WorkerUser, Cashier.Entity"/>
    </union-subclass>
  </class>
  
</hibernate-mapping>